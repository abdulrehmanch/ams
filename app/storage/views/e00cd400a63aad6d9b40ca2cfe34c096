<?php
use Carbon\Carbon;
?>


<?php /* Page title */ ?>
<?php $__env->startSection('title'); ?>
    <?php echo \Illuminate\Support\Facades\Lang::get('general.asset_maintenance_report'); ?> ::
    @parent
<?php $__env->stopSection(); ?>

<?php /* Page content */ ?>
<?php $__env->startSection('content'); ?>
    <div class="page-header">
        <h3><?php echo \Illuminate\Support\Facades\Lang::get('general.asset_maintenance_report'); ?></h3>
    </div>
    <div class="row">
        <div class="table-responsive">
             <table
             name="maintenancesReport"
             id="table"
             data-cookie="true"
             data-click-to-select="true"
             data-cookie-id-table="maintenancesReportTable">

                <thead>
                    <tr role="row">
                        <th class="col-sm-1"><?php echo \Illuminate\Support\Facades\Lang::get('admin/companies/table.title'); ?></th>
                        <th class="col-sm-1"><?php echo \Illuminate\Support\Facades\Lang::get('admin/asset_maintenances/table.asset_name'); ?></th>
                        <th class="col-sm-1"><?php echo \Illuminate\Support\Facades\Lang::get('admin/asset_maintenances/table.supplier_name'); ?></th>
                        <th class="col-sm-1"><?php echo \Illuminate\Support\Facades\Lang::get('admin/asset_maintenances/form.asset_maintenance_type'); ?></th>
                        <th class="col-sm-1"><?php echo \Illuminate\Support\Facades\Lang::get('admin/asset_maintenances/form.title'); ?></th>
                        <th class="col-sm-1"><?php echo \Illuminate\Support\Facades\Lang::get('admin/asset_maintenances/form.start_date'); ?></th>
                        <th class="col-sm-1"><?php echo \Illuminate\Support\Facades\Lang::get('admin/asset_maintenances/form.completion_date'); ?></th>
                        <th class="col-sm-1"><?php echo \Illuminate\Support\Facades\Lang::get('admin/asset_maintenances/form.asset_maintenance_time'); ?></th>
                        <th class="col-sm-1"><?php echo \Illuminate\Support\Facades\Lang::get('admin/asset_maintenances/form.cost'); ?></th>
                    </tr>
                </thead>
                <tbody>
                <?php
                    $totalDays = 0;
                    $totalCost = 0;
                ?>
                <?php foreach($assetMaintenances as $assetMaintenance): ?>
                    <tr>
                        <td><?php echo e(is_null($assetMaintenance->asset->company) ? '' : $assetMaintenance->asset->company->name); ?></td>
                        <td><?php echo e($assetMaintenance->asset->name); ?></td>
                        <td><?php echo e($assetMaintenance->supplier->name); ?></td>
                        <td><?php echo e($assetMaintenance->asset_maintenance_type); ?></td>
                        <td><?php echo e($assetMaintenance->title); ?></td>
                        <td><?php echo e($assetMaintenance->start_date); ?></td>
                        <td><?php echo e(is_null($assetMaintenance->completion_date) ? Lang::get('admin/asset_maintenances/message.asset_maintenance_incomplete') : $assetMaintenance->completion_date); ?></td>
                        <?php if(is_null($assetMaintenance->asset_maintenance_time)): ?>
                            <?php
                                $assetMaintenanceTime = intval(Carbon::now()->diffInDays(Carbon::parse($assetMaintenance->start_date)));
                            ?>
                        <?php else: ?>
                            <?php
                                $assetMaintenanceTime = intval($assetMaintenance->asset_maintenance_time);
                            ?>
                        <?php endif; ?>
                        <td><?php echo e($assetMaintenanceTime); ?></td>
                        <td>
                          <?php echo e(Setting::first()->default_currency); ?>

                          <?php echo number_format($assetMaintenance->cost,2); ?>

                        </td>
                    </tr>
                    <?php
                        $totalDays += $assetMaintenanceTime;
                        $totalCost += floatval($assetMaintenance->cost);
                    ?>
                <?php endforeach; ?>
                </tbody>
                <tfoot>
                    <tr>
                        <td colspan="6" align="right"><strong>Totals:</strong></td>
                        <td><?php echo number_format($totalDays); ?></td>
                        <td>
                          <?php echo e(Setting::first()->default_currency); ?>

                          <?php echo number_format($totalCost,2); ?>

                        </td>
                    </tr>
                </tfoot>
            </table>
        </div>
    </div>

