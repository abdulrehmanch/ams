            <td>
            <?php if($asset->assigneduser): ?>
            	 <?php if($asset->assigneduser->deleted_at!=''): ?>
            	 	<del><?php echo e($asset->assigneduser->fullName()); ?></del>
            	 <?php else: ?>
            	 	<a href="<?php echo route('view/user', $asset->assigned_to); ?>">
					<?php echo e($asset->assigneduser->fullName()); ?>

					</a>
            	 <?php endif; ?>

            <?php endif; ?>
            </td>
            <td>
                <?php if($asset->assetloc): ?>
                    <?php echo e($asset->assetloc->name); ?>

                <?php elseif($asset->defaultloc): ?>
                    <?php echo e($asset->defaultloc->name); ?>

                <?php endif; ?>
            </td>
            <td><?php echo e($asset->purchase_date); ?></td>

            <td>
            <?php if($asset->model->eol): ?> <?php echo e($asset->eol_date()); ?>

            <?php endif; ?>
            </td>

            <?php if($asset->purchase_cost > 0): ?>
            <td class="align-right">
                <?php if($asset->assetloc ): ?>
                    <?php echo e($asset->assetloc->currency); ?>

                <?php else: ?>
                    <?php echo e(Setting::first()->default_currency); ?>

                <?php endif; ?>
            	<?php echo e(number_format($asset->purchase_cost)); ?></td>
            <td class="align-right">
                <?php if($asset->assetloc ): ?>
                    <?php echo e($asset->assetloc->currency); ?>

